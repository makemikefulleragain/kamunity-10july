# Environment Variables for Kamunity

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://kamunity.ai

# reCAPTCHA Configuration (Get from Google reCAPTCHA)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# SendGrid Email Configuration (Get from SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=hello@kamunity.ai

# Admin Email Configuration
MIKE_FULLER_EMAIL=admin@kamunity.ai

# Crisp Chat Configuration (Optional)
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id_here

# Node Environment
NODE_ENV=production 